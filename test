# Lista serwerów
servers=("server01" "server02" "server03")

# Wygeneruj skrypt pomocniczy dla każdego serwera
cat > get_certs.sh << EOF
#!/bin/bash
EOF

for server in "${servers[@]}"; do
  echo "echo \"\$(${server})\" | base64 --decode > \"$(Build.ArtifactStagingDirectory)/certificates/${server}.pfx\"" >> get_certs.sh
done

chmod +x get_certs.sh
